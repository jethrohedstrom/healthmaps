---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const tips = await getCollection('tips');

// Group by category
const grouped = tips.reduce((acc, tip) => {
  const cat = tip.data.category || 'General';
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(tip);
  return acc;
}, {} as Record<string, typeof tips>);
---
<BaseLayout
  title="Practical Tips"
  description="Practical tips for navigating Australia's mental health system — what to say to your GP, how to choose a psychologist, and how to reduce costs."
>
  <!-- Hero -->
  <section class="bg-white">
    <div class="max-w-[720px] mx-auto px-4 py-16 md:py-20">
      <h1 class="text-[2.25rem] md:text-[2.5rem] font-bold text-slate-800 mb-4 tracking-[-0.01em]">Practical Tips</h1>
      <p class="text-lg text-gray-500">
        Useful advice for each stage of the process — from your first GP visit to getting the most out of your sessions.
      </p>
    </div>
  </section>

  <!-- Tips by Category -->
  <section class="bg-gray-50">
    <div class="max-w-[720px] mx-auto px-4 py-16 md:py-20">
      {Object.entries(grouped).map(([category, categoryTips]) => (
        <div class="mb-10 last:mb-0">
          <h2 class="text-xl font-bold text-slate-800 mb-4">{category}</h2>
          <div class="space-y-4">
            {categoryTips.map(tip => (
              <a href={`/tips/${tip.id}/`} class="card-hover block group">
                <article class="bg-white rounded-xl border border-gray-200 p-8 transition-colors">
                  <h3 class="text-[1.375rem] font-semibold text-slate-800 group-hover:text-brand-green transition-colors">
                    {tip.data.title}
                  </h3>
                  <p class="text-gray-500 mt-2">{tip.data.summary}</p>
                </article>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
