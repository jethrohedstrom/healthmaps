---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const stories = await getCollection('stories');
  return stories.map(story => ({
    params: { slug: story.id },
    props: { story },
  }));
}

const { story } = Astro.props;
const { Content } = await render(story);
---
<BaseLayout
  title={story.data.title}
  description={story.data.summary}
>
  <article class="max-w-[720px] mx-auto px-4 py-16 md:py-20">
    <a href="/stories/" class="text-sm text-gray-500 hover:text-primary transition-colors mb-6 inline-block">&larr; All stories</a>
    <h1 class="text-[2.25rem] font-bold text-heading mb-2 tracking-[-0.01em]">"{story.data.title}"</h1>
    <p class="text-gray-400 mb-8">
      {story.data.name}{story.data.age ? `, ${story.data.age}` : ''}{story.data.location ? ` â€” ${story.data.location}` : ''}
    </p>
    <div class="prose max-w-none text-gray-700">
      <Content />
    </div>
    <div class="mt-16 pt-8 border-t border-border text-center">
      <a href="/pathway/" class="inline-block bg-primary text-heading px-10 py-4 rounded-xl font-semibold text-base shadow-sm hover:bg-primary/90 transition-colors">
        Get Started with Your Own Plan
      </a>
    </div>
  </article>
</BaseLayout>
