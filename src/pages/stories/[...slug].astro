---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const stories = await getCollection('stories');
  return stories.map(story => ({
    params: { slug: story.id },
    props: { story },
  }));
}

const { story } = Astro.props;
const { Content } = await render(story);
---
<BaseLayout
  title={story.data.title}
  description={story.data.summary}
>
  <article class="max-w-3xl mx-auto px-4 py-12">
    <a href="/stories/" class="text-sm text-brand-blue hover:text-brand-blue/80 transition-colors mb-6 inline-block">&larr; All stories</a>
    <h1 class="text-3xl font-bold text-brand-blue mb-2">"{story.data.title}"</h1>
    <p class="text-gray-500 mb-8">
      {story.data.name}{story.data.age ? `, ${story.data.age}` : ''}{story.data.location ? ` â€” ${story.data.location}` : ''}
    </p>
    <div class="prose max-w-none text-gray-700">
      <Content />
    </div>
    <div class="mt-12 pt-6 border-t border-gray-200 text-center">
      <a href="/pathway/" class="inline-block bg-brand-blue text-white px-6 py-3 rounded-lg font-medium hover:bg-brand-blue/90 transition-colors">
        Get Started with Your Own Plan
      </a>
    </div>
  </article>
</BaseLayout>
