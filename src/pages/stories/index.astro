---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const stories = await getCollection('stories');
---
<BaseLayout
  title="Stories"
  description="Real-life experiences of Australians navigating the mental health system — from booking a GP to finding the right psychologist."
>
  <!-- Hero -->
  <section class="bg-white">
    <div class="max-w-[720px] mx-auto px-4 py-16 md:py-20">
      <h1 class="text-[2.25rem] md:text-[2.5rem] font-bold text-slate-800 mb-4 tracking-[-0.01em]">Stories</h1>
      <p class="text-lg text-gray-500">
        Experiences from people who've navigated the mental health system. Every journey is different — these might help you see what to expect.
      </p>
      <!-- REVIEW — Note: these are fictional composite stories for illustrative purposes -->
    </div>
  </section>

  <!-- Story Cards -->
  <section class="bg-gray-50">
    <div class="max-w-[720px] mx-auto px-4 py-16 md:py-20">
      {stories.length === 0 ? (
        <p class="text-gray-500 text-center">Stories coming soon.</p>
      ) : (
        <div class="space-y-6">
          {stories.map(story => (
            <a href={`/stories/${story.id}/`} class="card-hover block group">
              <article class="bg-white rounded-xl border border-gray-200 p-8 transition-colors">
                <h2 class="text-[1.375rem] font-semibold text-slate-800 group-hover:text-brand-green transition-colors">
                  "{story.data.title}"
                </h2>
                <p class="text-sm text-gray-400 mt-1">
                  {story.data.name}{story.data.age ? `, ${story.data.age}` : ''}{story.data.location ? ` — ${story.data.location}` : ''}
                </p>
                <p class="text-gray-500 mt-3">{story.data.summary}</p>
              </article>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
