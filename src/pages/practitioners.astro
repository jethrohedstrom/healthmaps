---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

const practitioners = (await getCollection('practitioners')).sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---
<BaseLayout
  title="Who should I see?"
  description="Understand the difference between psychologists, psychiatrists, counsellors, and psychotherapists — including costs, Medicare rebates, and referral requirements."
>
  <!-- Hero + Start here -->
  <section class="bg-white">
    <div class="max-w-[960px] mx-auto px-4 pt-16 md:pt-20 pb-16 md:pb-20">
      <div class="max-w-[720px] mb-12">
        <h1 class="text-[2.25rem] md:text-[2.5rem] font-bold text-slate-800 mb-4 tracking-[-0.01em]">Who should I see?</h1>
        <p class="text-lg text-gray-500">
          Here's a plain-English guide to the different types of mental health professionals in Australia — what they do, what they cost, and whether Medicare covers them.
        </p>
      </div>
      <h2 class="text-[1.5rem] font-bold text-slate-800 mb-2 tracking-[-0.01em]">Start here</h2>
      <p class="text-gray-500 mb-8">Pick the situation that sounds most like you.</p>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
        <!-- Talk through feelings → Psychologist -->
        <a href="#psychologist" class="card-hover block bg-white rounded-xl p-6 md:p-8 shadow-sm text-left">
          <div class="w-12 h-12 rounded-xl bg-icon-bg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
            </svg>
          </div>
          <h3 class="text-sm md:text-base font-semibold text-heading mb-1">I want to talk through my feelings</h3>
          <p class="text-xs md:text-sm text-body">A psychologist or counsellor can help</p>
        </a>

        <!-- Need medication → Psychiatrist -->
        <a href="#psychiatrist" class="card-hover block bg-white rounded-xl p-6 md:p-8 shadow-sm text-left">
          <div class="w-12 h-12 rounded-xl bg-icon-bg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="m20.893 13.393-1.135-1.135a2.252 2.252 0 0 1-.421-.585l-1.08-2.16a.414.414 0 0 0-.663-.107.827.827 0 0 1-.812.21l-1.273-.363a.89.89 0 0 0-.738 1.595l.587.39c.59.395.674 1.23.172 1.732l-.2.2c-.212.212-.33.498-.33.796v.41c0 .409-.11.809-.32 1.158l-1.315 2.191a2.11 2.11 0 0 1-1.81 1.025 1.055 1.055 0 0 1-1.055-1.055v-1.172c0-.92-.56-1.747-1.414-2.089l-.655-.261a2.25 2.25 0 0 1-1.383-2.46l.007-.042a2.25 2.25 0 0 1 .29-.787l.09-.15a2.25 2.25 0 0 1 2.37-1.048l1.178.236a1.125 1.125 0 0 0 1.302-.795l.208-.73a1.125 1.125 0 0 0-.578-1.315l-.665-.332-.091.091a2.25 2.25 0 0 1-1.591.659h-.18a.94.94 0 0 0-.662.274.931.931 0 0 1-1.458-1.137l1.411-2.353a2.25 2.25 0 0 0 .286-.76m11.928 9.869A9 9 0 0 0 8.965 3.525m11.928 9.868A9 9 0 1 1 8.965 3.525" />
            </svg>
          </div>
          <h3 class="text-sm md:text-base font-semibold text-heading mb-1">I think I need medication</h3>
          <p class="text-xs md:text-sm text-body">You'll want to see a psychiatrist</p>
        </a>

        <!-- Most affordable → Counsellor -->
        <a href="#counsellor" class="card-hover block bg-white rounded-xl p-6 md:p-8 shadow-sm text-left">
          <div class="w-12 h-12 rounded-xl bg-icon-bg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
          </div>
          <h3 class="text-sm md:text-base font-semibold text-heading mb-1">I want the most affordable option</h3>
          <p class="text-xs md:text-sm text-body">Consider a counsellor or bulk-billing psychologist</p>
        </a>

        <!-- Not sure → GP -->
        <a href="#gp-tip" class="card-hover block bg-white rounded-xl p-6 md:p-8 shadow-sm text-left">
          <div class="w-12 h-12 rounded-xl bg-icon-bg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
            </svg>
          </div>
          <h3 class="text-sm md:text-base font-semibold text-heading mb-1">I'm not sure yet</h3>
          <p class="text-xs md:text-sm text-body">Start with your GP — they'll guide you</p>
        </a>
      </div>
      <div id="gp-tip" class="mt-8 bg-icon-bg rounded-xl p-8 scroll-mt-24">
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-lg bg-white flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-heading mb-2">Not sure? Start with your GP</h3>
            <p class="text-body text-sm leading-relaxed">
              Your GP can assess your situation, create a Mental Health Care Plan, and refer you to the right professional. This is the most common first step — and it unlocks Medicare rebates.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- At a glance — Comparison Table -->
  <section class="bg-gray-50">
    <div class="max-w-[960px] mx-auto px-4 py-16 md:py-20">
      <h2 class="text-[1.5rem] font-bold text-slate-800 mb-2 tracking-[-0.01em]">At a glance</h2>
      <p class="text-gray-500 mb-8">A quick comparison of the four main types of mental health professionals.</p>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left border-collapse">
          <thead>
            <tr class="border-b-2 border-gray-300">
              <th class="py-3 px-4 font-semibold text-slate-800"></th>
              <th class="py-3 px-4 font-semibold text-slate-800">Typical Cost</th>
              <th class="py-3 px-4 font-semibold text-slate-800">Medicare Rebate</th>
              <th class="py-3 px-4 font-semibold text-slate-800">Referral Needed?</th>
              <th class="py-3 px-4 font-semibold text-slate-800">Typical Wait</th>
            </tr>
          </thead>
          <tbody>
            {practitioners.map((p, i) => (
              <tr class:list={[i % 2 === 0 ? 'bg-white' : 'bg-gray-50', 'border-b border-gray-200']}>
                <td class="py-3 px-4 font-semibold text-gray-700">{p.data.title}</td>
                <td class="py-3 px-4 text-gray-500">{p.data.cost}</td>
                <td class="py-3 px-4 text-gray-500">{p.data.rebate}</td>
                <td class="py-3 px-4">
                  {p.data.referralRequired ? (
                    <span class="text-brand-orange font-medium">Yes</span>
                  ) : (
                    <span class="text-brand-green font-medium">No</span>
                  )}
                </td>
                <td class="py-3 px-4 text-gray-500">{p.data.waitTime}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- The details — Accordions -->
  <section class="bg-white">
    <div class="max-w-[960px] mx-auto px-4 py-16 md:py-20">
      <h2 class="text-[1.5rem] font-bold text-slate-800 mb-8 tracking-[-0.01em]">The details</h2>
      <div>
        {practitioners.map(async (p) => {
          const { Content } = await render(p);
          return (
            <details id={p.id} class="accordion-item scroll-mt-24">
              <summary class="flex items-start justify-between gap-4">
                <div>
                  <span class="text-lg font-semibold text-slate-800 block">{p.data.title}</span>
                  <div class="mt-1 flex flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500">
                    <span>{p.data.cost}</span>
                    <span>Rebate: {p.data.rebate}</span>
                    <span>{p.data.waitTime}</span>
                    <span class:list={[p.data.referralRequired ? 'text-brand-orange' : 'text-brand-green', 'font-medium']}>
                      {p.data.referralRequired ? 'Referral required' : 'No referral needed'}
                    </span>
                  </div>
                </div>
              </summary>
              <div class="accordion-content prose prose-sm max-w-none text-gray-700">
                <Content />
              </div>
            </details>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gray-50">
    <div class="max-w-[720px] mx-auto px-4 py-16 md:py-20 text-center">
      <h2 class="text-xl font-semibold text-slate-800 mb-3">Want to estimate your out-of-pocket costs?</h2>
      <a href="/calculator/" class="inline-block bg-brand-green text-heading px-6 py-3 rounded-lg font-medium hover:bg-brand-green/90 transition-colors">
        Use the Cost Calculator
      </a>
    </div>
  </section>

  <!-- Auto-open accordion when navigating from decision helper -->
  <script>
    function openTargetAccordion() {
      const hash = window.location.hash;
      if (!hash) return;
      const target = document.querySelector(hash);
      if (target instanceof HTMLDetailsElement) {
        target.open = true;
      }
    }
    openTargetAccordion();
    window.addEventListener('hashchange', openTargetAccordion);
  </script>
</BaseLayout>
