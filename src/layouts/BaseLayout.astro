---
import '../styles/global.css';
import CrisisBanner from '../components/CrisisBanner.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Navigate Australia\'s mental health system with clear, step-by-step guidance. Find the right practitioner, understand costs, and access Medicare rebates.',
  ogImage = '/og-default.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://healthmaps.au');
---
<!DOCTYPE html>
<html lang="en-AU">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | HealthMaps</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | HealthMaps`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="en_AU" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Floating crisis pill â€” right side, next to chat bubble -->
    <CrisisBanner />

    <!-- Floating chat bubble -->
    <a
      href="https://chat.healthmaps.com.au"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-brand-green text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:bg-brand-green/90 hover:scale-105 transition-all"
      aria-label="Chat with HealthMaps"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z" />
      </svg>
    </a>
  </body>
</html>
