---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/pathway/', label: 'Getting Started' },
  { href: '/practitioners/', label: 'Compare Practitioners' },
  { href: '/calculator/', label: 'Cost Calculator' },
  { href: '/stories/', label: 'Stories' },
  { href: '/tips/', label: 'Tips' },
];
---
<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 py-5" aria-label="Main navigation">
    <div class="flex items-center justify-between">
      <!-- Logo mark + wordmark -->
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-brand-blue hover:text-brand-blue/80 transition-colors" aria-label="HealthMaps home">
        <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" aria-hidden="true">
          <circle cx="16" cy="16" r="15" stroke="currentColor" stroke-width="1.5" fill="#ECFDF5"/>
          <path d="M16 8v16M8 16h16" stroke="#059669" stroke-width="2.5" stroke-linecap="round"/>
        </svg>
        HealthMaps
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-brand-green"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-6">
        <ul class="flex items-center gap-6 text-sm font-medium">
          {navLinks.map(link => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'hover:text-brand-green transition-colors',
                  currentPath === link.href ? 'text-brand-green font-semibold' : 'text-gray-500',
                ]}
                aria-current={currentPath === link.href ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <a
          href="https://chat.healthmaps.com.au"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-gray-500 hover:text-brand-green transition-colors"
        >
          Chat
        </a>
        <a
          href="/pathway/"
          class="bg-brand-green text-white px-5 py-2 rounded-lg text-sm font-semibold hover:bg-brand-green/90 transition-colors"
        >
          Get Started
        </a>
      </div>
    </div>

    <!-- Mobile nav -->
    <ul id="mobile-menu" class="hidden md:hidden mt-4 space-y-2 text-sm font-medium border-t border-gray-200 pt-4">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block py-2 px-2 rounded hover:bg-gray-50 transition-colors',
              currentPath === link.href ? 'text-brand-green font-semibold bg-gray-50' : 'text-gray-500',
            ]}
            aria-current={currentPath === link.href ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="https://chat.healthmaps.com.au"
          target="_blank"
          rel="noopener noreferrer"
          class="block py-2 px-2 rounded hover:bg-gray-50 transition-colors text-gray-500"
        >
          Chat
        </a>
      </li>
      <li class="pt-2">
        <a
          href="/pathway/"
          class="block text-center bg-brand-green text-white px-5 py-2.5 rounded-lg text-sm font-semibold hover:bg-brand-green/90 transition-colors"
        >
          Get Started
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('hidden');
    });
  }
</script>
