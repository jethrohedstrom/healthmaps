---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/pathway/', label: 'Getting Started' },
  { href: '/practitioners/', label: 'Compare Practitioners' },
  { href: '/calculator/', label: 'Cost Calculator' },
  { href: '/stories/', label: 'Stories' },
  { href: '/tips/', label: 'Tips' },
];
---
<header class="bg-white border-b border-gray-200">
  <nav class="max-w-5xl mx-auto px-4 py-4" aria-label="Main navigation">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold text-brand-blue hover:text-brand-blue/80 transition-colors">
        HealthMaps
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-brand-blue"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop nav -->
      <ul class="hidden md:flex items-center gap-6 text-sm font-medium">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'hover:text-brand-blue transition-colors',
                currentPath === link.href ? 'text-brand-blue font-semibold' : 'text-gray-600',
              ]}
              aria-current={currentPath === link.href ? 'page' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Mobile nav -->
    <ul id="mobile-menu" class="hidden md:hidden mt-4 space-y-2 text-sm font-medium border-t border-gray-100 pt-4">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block py-2 px-2 rounded hover:bg-gray-50 transition-colors',
              currentPath === link.href ? 'text-brand-blue font-semibold bg-gray-50' : 'text-gray-600',
            ]}
            aria-current={currentPath === link.href ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('hidden');
    });
  }
</script>
