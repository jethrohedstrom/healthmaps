---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/pathway/', label: 'Getting Started' },
  { href: '/practitioners/', label: 'Who should I see?' },
  { href: '/calculator/', label: 'Cost Calculator' },
  { href: '/stories/', label: 'Stories' },
  { href: '/tips/', label: 'Tips' },
];
---
<header class="sticky top-0 z-50 bg-white">
  <nav class="w-full px-4 sm:px-8 py-8" aria-label="Main navigation">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-heading transition-colors" aria-label="HealthMaps home">
        <svg class="w-[17px] h-[17px]" viewBox="0 0 32 32" aria-hidden="true"><circle cx="16" cy="16" r="16" fill="#44EE70"/></svg>
        HealthMaps
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-primary"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-6">
        <ul class="flex items-center gap-6 text-sm font-medium">
          {navLinks.map(link => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'hover:text-primary transition-colors',
                  currentPath === link.href ? 'text-primary font-semibold' : 'text-heading',
                ]}
                aria-current={currentPath === link.href ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <a
          href="https://chat.healthmaps.com.au"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-heading hover:text-primary transition-colors"
        >
          Chat
        </a>
      </div>
    </div>

    <!-- Mobile nav -->
    <ul id="mobile-menu" class="md:hidden mt-4 space-y-2 text-base font-medium border-t border-border pt-4 max-h-0 opacity-0 overflow-hidden transition-all duration-200 ease-out">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block py-3.5 px-4 rounded-lg text-center hover:bg-gray-50 transition-colors',
              currentPath === link.href ? 'text-primary font-semibold bg-gray-50' : 'text-heading',
            ]}
            aria-current={currentPath === link.href ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="https://chat.healthmaps.com.au"
          target="_blank"
          rel="noopener noreferrer"
          class="block py-3.5 px-4 rounded-lg text-center hover:bg-gray-50 transition-colors text-heading"
        >
          Chat
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const icon = document.getElementById('menu-icon');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      if (expanded) {
        menu.classList.remove('max-h-[500px]', 'opacity-100');
        menu.classList.add('max-h-0', 'opacity-0');
      } else {
        menu.classList.remove('max-h-0', 'opacity-0');
        menu.classList.add('max-h-[500px]', 'opacity-100');
      }
      if (icon) {
        icon.setAttribute('d', expanded
          ? 'M4 6h16M4 12h16M4 18h16'
          : 'M6 18L18 6M6 6l12 12'
        );
      }
    });
  }
</script>
